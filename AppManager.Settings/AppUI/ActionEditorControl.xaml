<src:OverlayContent xmlns:src="clr-namespace:AppManager.Settings.UI" 
			 x:Class="AppManager.Settings.AppUI.ActionEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:local="clr-namespace:AppManager.Settings.AppUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Action Type Selection -->
		<GroupBox Header="Action Configuration" Grid.Row="0" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Label Content="Action Type:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
				<ComboBox x:Name="ActionTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" 
                          SelectionChanged="ActionTypeComboBox_SelectionChanged"/>

				<Label Content="App Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
				<TextBox x:Name="AppNameTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0" 
                         VerticalAlignment="Center" Height="22"/>

				<Label Content="Window Title:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
				<TextBox x:Name="WindowTitleTextBox" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0" 
                         VerticalAlignment="Center" Height="22"/>
			</Grid>
		</GroupBox>

		<!-- Launch-specific Options -->
		<GroupBox x:Name="LaunchOptionsGroup" Header="Launch Options" Grid.Row="1" Margin="5" Visibility="Collapsed">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<Label Content="Executable Path:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
				<TextBox x:Name="ExecutablePathTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,5,0" 
                         VerticalAlignment="Center" Height="22"/>
				<Button Content="Browse..." Grid.Row="0" Grid.Column="2" Width="80" Height="25"
                        Click="BrowseExecutableButton_Click"/>

				<Label Content="Arguments:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
				<TextBox x:Name="ArgumentsTextBox" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Margin="5,0,0,0" 
                         VerticalAlignment="Center" Height="22"/>
			</Grid>
		</GroupBox>

		<!-- Advanced Options -->
		<GroupBox Header="Advanced Options" Grid.Row="2" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<CheckBox x:Name="ForceOperationCheckBox" Content="Force Operation" 
                          Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
				<CheckBox x:Name="IncludeChildProcessesCheckBox" Content="Include Child Processes" 
                          Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>
				<CheckBox x:Name="IncludeSimilarNamesCheckBox" Content="Include Similar Names" 
                          Grid.Row="0" Grid.Column="2" Margin="5" VerticalAlignment="Center"/>

				<Label Content="Timeout (ms):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
				<TextBox x:Name="TimeoutTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0" 
                         VerticalAlignment="Center" Height="22" Text="5000"/>
			</Grid>
		</GroupBox>

		<!-- Conditions Section -->
		<GroupBox Header="Conditions" Grid.Row="3" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="100"/>
				</Grid.RowDefinitions>

				<WrapPanel Grid.Row="0" Margin="0,0,0,5">
					<ComboBox x:Name="ConditionTypeComboBox" Width="150" Margin="0,0,5,0"/>
					<Button Content="Add Condition" Width="100" Height="25" 
                            Click="AddConditionButton_Click"/>
				</WrapPanel>

				<ListBox x:Name="ConditionsListBox" Grid.Row="1">
					<ListBox.ItemTemplate>
						<DataTemplate>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition Width="*"/>
									<ColumnDefinition Width="Auto"/>
								</Grid.ColumnDefinitions>
								<TextBlock Grid.Column="0" Text="{Binding DisplayText}" VerticalAlignment="Center"/>
								<Button Grid.Column="1" Content="Remove" Width="60" Height="20" 
                                        Click="RemoveConditionButton_Click" Tag="{Binding}"/>
							</Grid>
						</DataTemplate>
					</ListBox.ItemTemplate>
				</ListBox>
			</Grid>
		</GroupBox>

		<!-- Preview/Test Section -->
		<GroupBox Header="Preview n Test" Grid.Row="4" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
					<TextBlock x:Name="PreviewTextBlock" TextWrapping="Wrap" 
                               Background="LightGray" Padding="5" FontFamily="Consolas"/>
				</ScrollViewer>

				<WrapPanel Grid.Row="1" Margin="0,5,0,0" HorizontalAlignment="Right">
					<Button Content="Test Action" Width="80" Height="25" Margin="0,0,5,0"
                            Click="TestActionButton_Click"/>
					<Button Content="Validate" Width="80" Height="25" 
                            Click="ValidateButton_Click"/>
				</WrapPanel>
			</Grid>
		</GroupBox>

		<!-- Action Buttons -->
		<WrapPanel Grid.Row="5" HorizontalAlignment="Right" Margin="5">
			<Button x:Name="SaveButton" Content="Save" Width="75" Height="25" 
                    Margin="5,0,5,0" Click="SaveButton_Click"/>
			<Button x:Name="CancelButton" Content="Cancel" Width="75" Height="25" 
                    Margin="5,0,0,0" Click="CancelButton_Click"/>
		</WrapPanel>
	</Grid>
</src:OverlayContent>