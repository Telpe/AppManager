<UserControl x:Class="AppManager.Settings.Conditions.ConditionEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppManager.Settings.Conditions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="10">
            <!-- Condition Type Section -->
            <GroupBox Header="Condition Type" Margin="0,0,0,10">
                <StackPanel Orientation="Vertical" Margin="5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label Grid.Column="0" Content="Type:" VerticalAlignment="Center" Width="80"/>
                        <ComboBox x:Name="ConditionTypeComboBox" Grid.Column="1" Width="200" 
                                  HorizontalAlignment="Left" Margin="5,0,0,0"/>
                    </Grid>
                    <CheckBox x:Name="IsNotCheckBox" Content="Invert condition (NOT)" Margin="85,5,0,0"/>
                </StackPanel>
            </GroupBox>

            <!-- Process Parameters -->
            <GroupBox Header="Process Parameters" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Process Name:" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="ProcessNameTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,5"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Executable Path:" VerticalAlignment="Center"/>
                    <TextBox x:Name="ExecutablePathTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,5"/>
                    
                    <CheckBox x:Name="IncludeChildProcessesCheckBox" Grid.Row="2" Grid.Column="1" 
                              Content="Include child processes" Margin="5,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- File Parameters -->
            <GroupBox Header="File Parameters" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Column="0" Content="File Path:" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="FilePathTextBox" Grid.Column="1" Margin="5,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Window Parameters -->
            <GroupBox Header="Window Parameters" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Window Title:" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="WindowTitleTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,5"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Window Class:" VerticalAlignment="Center"/>
                    <TextBox x:Name="WindowClassNameTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Network Parameters -->
            <GroupBox Header="Network Parameters" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Port:" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="PortTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,5"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="IP Address:" VerticalAlignment="Center"/>
                    <TextBox x:Name="IPAddressTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Time Parameters -->
            <GroupBox Header="Time Parameters" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Start Time:" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="StartTimeTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,5" 
                             ToolTip="Format: HH:mm:ss"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="End Time:" VerticalAlignment="Center"/>
                    <TextBox x:Name="EndTimeTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,5" 
                             ToolTip="Format: HH:mm:ss"/>
                    
                    <Label Grid.Row="2" Grid.Column="0" Content="Allowed Days:" VerticalAlignment="Top"/>
                    <StackPanel x:Name="AllowedDaysStackPanel" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0">
                        <CheckBox x:Name="MondayCheckBox" Content="Monday"/>
                        <CheckBox x:Name="TuesdayCheckBox" Content="Tuesday"/>
                        <CheckBox x:Name="WednesdayCheckBox" Content="Wednesday"/>
                        <CheckBox x:Name="ThursdayCheckBox" Content="Thursday"/>
                        <CheckBox x:Name="FridayCheckBox" Content="Friday"/>
                        <CheckBox x:Name="SaturdayCheckBox" Content="Saturday"/>
                        <CheckBox x:Name="SundayCheckBox" Content="Sunday"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- System Parameters -->
            <GroupBox Header="System Parameters" Margin="0,0,0,10">
                <Grid Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Label Grid.Row="0" Grid.Column="0" Content="Min Uptime (min):" VerticalAlignment="Center" Width="120"/>
                    <TextBox x:Name="MinSystemUptimeTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,5"/>
                    
                    <Label Grid.Row="1" Grid.Column="0" Content="Max Uptime (min):" VerticalAlignment="Center"/>
                    <TextBox x:Name="MaxSystemUptimeTextBox" Grid.Row="1" Grid.Column="1" Margin="5,0,0,5"/>
                    
                    <Label Grid.Row="2" Grid.Column="0" Content="Timeout (ms):" VerticalAlignment="Center"/>
                    <TextBox x:Name="TimeoutMsTextBox" Grid.Row="2" Grid.Column="1" Margin="5,0,0,0"/>
                </Grid>
            </GroupBox>

            <!-- Action Buttons -->
            <WrapPanel HorizontalAlignment="Right" Margin="5">
                <Button x:Name="SaveButton" Content="Save" Width="75" Height="25" 
                        Margin="5,0,5,0" Click="SaveButton_Click"/>
                <Button x:Name="CancelButton" Content="Cancel" Width="75" Height="25" 
                        Margin="5,0,0,0" Click="CancelButton_Click"/>
            </WrapPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>
