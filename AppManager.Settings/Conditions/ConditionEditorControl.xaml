<UserControl x:Class="AppManager.Settings.Conditions.ConditionEditorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppManager.Settings.Conditions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<StackPanel Orientation="Vertical" Margin="10">
		<ComboBox x:Name="ConditionTypeComboBox" Width="150" Margin="0,0,5,0"/>
		<WrapPanel Grid.Row="5" HorizontalAlignment="Right" Margin="5">
			<Button x:Name="SaveButton" Content="Save" Width="75" Height="25" 
            Margin="5,0,5,0" Click="SaveButton_Click"/>
			<Button x:Name="CancelButton" Content="Cancel" Width="75" Height="25" 
            Margin="5,0,0,0" Click="CancelButton_Click"/>
		</WrapPanel>
	</StackPanel>
</UserControl>
