<UserControl
	x:Class="AppManager.Settings.EditorControls.ActionEditorControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:AppManager.Settings.EditorControls"
	xmlns:parameterControls="clr-namespace:AppManager.Settings.ParameterControls"
    mc:Ignorable="d" 
    d:DesignHeight="450" d:DesignWidth="600">

	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>

		<!-- Action Type Selection -->
		<GroupBox Header="Action Type" Grid.Row="0" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Label Content="Change:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
				<ComboBox x:Name="ActionTypeComboBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" 
                          SelectionChanged="ActionTypeComboBox_SelectionChanged"/>
			</Grid>
		</GroupBox>

		<parameterControls:ConditionsParameter x:Name="ConditionPlugin" Grid.Row="1" Margin="5" ConditionsChanged="ConditionPlugin_ConditionsChanged"/>

		<!-- Launch-specific Options -->
		<GroupBox x:Name="LaunchOptionsGroup" Header="Launch Options" Grid.Row="2" Margin="5" Visibility="Collapsed">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>
			</Grid>
		</GroupBox>

		<!-- Advanced Options -->
		<GroupBox Header="Advanced Options" Grid.Row="3" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<CheckBox x:Name="ForceOperationCheckBox" Content="Force Operation" 
                          Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
				<CheckBox x:Name="IncludeChildProcessesCheckBox" Content="Include Child Processes" 
                          Grid.Row="0" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>
				<CheckBox x:Name="IncludeSimilarNamesCheckBox" Content="Include Similar Names" 
                          Grid.Row="0" Grid.Column="2" Margin="5" VerticalAlignment="Center"/>

				<parameterControls:TimerParameter x:Name="TimeoutParameter" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Margin="5" TimerValueChanged="TimeoutParameter_TimerValueChanged" />
			</Grid>
		</GroupBox>

		<!-- Preview/Test Section -->
		<GroupBox Header="Preview n Test" Grid.Row="4" Margin="5">
			<Grid Margin="5">
				<Grid.RowDefinitions>
					<RowDefinition Height="*"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
					<TextBlock x:Name="PreviewTextBlock" TextWrapping="Wrap" 
                               Background="LightGray" Padding="5" FontFamily="Consolas"/>
				</ScrollViewer>

				<WrapPanel Grid.Row="1" Margin="0,5,0,0" HorizontalAlignment="Right">
					<Button Content="Test Action" Width="80" Height="25" Margin="0,0,5,0"
                            Click="TestActionButton_Click"/>
					<Button Content="Validate" Width="80" Height="25" 
                            Click="ValidateButton_Click"/>
				</WrapPanel>
			</Grid>
		</GroupBox>

		<!-- Action Buttons -->
		<WrapPanel Grid.Row="5" HorizontalAlignment="Right" Margin="5">
			<Button x:Name="SaveButton" Content="Save" Width="75" Height="25" 
                    Margin="5,0,5,0" Click="SaveButton_Click"/>
			<Button x:Name="CancelButton" Content="Cancel" Width="75" Height="25" 
                    Margin="5,0,0,0" Click="CancelButton_Click"/>
		</WrapPanel>
	</Grid>
</UserControl>