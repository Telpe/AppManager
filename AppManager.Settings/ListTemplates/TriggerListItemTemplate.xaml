<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    
    <DataTemplate x:Key="TriggerListItemTemplate">
        <Border BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Active Checkbox -->
                <CheckBox Grid.Column="0" 
                          IsChecked="{Binding IsActive}" 
                          VerticalAlignment="Center" 
                          Margin="0,0,10,0"
                          ToolTip="Active" />

                <!-- Trigger Type Display -->
                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock Text="{Binding DisplayName}" 
                               FontWeight="Bold" />
                    <TextBlock Text="{Binding ConditionCount, StringFormat='Conditions: {0}'}" 
                               FontSize="10" 
                               Foreground="Gray" />
                </StackPanel>

                <!-- Condition Count Badge -->
                <Border Grid.Column="2" 
                        Background="#FF4CAF50" 
                        CornerRadius="10" 
                        Padding="6,2" 
                        Margin="5,0"
                        VerticalAlignment="Center"
                        Visibility="{Binding HasConditions, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="{Binding ConditionCount}" 
                               Foreground="White" 
                               FontSize="10" 
                               FontWeight="Bold" />
                </Border>

                <!-- Edit Button -->
                <Button Grid.Column="3" 
                        Content="Edit" 
                        Width="50" 
                        Height="24" 
                        Margin="5,0,0,0"
                        Tag="{Binding}"
                        />
            </Grid>
        </Border>
    </DataTemplate>
</ResourceDictionary>