<Window x:Class="AppManager.Settings.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppManager.Settings"
        mc:Ignorable="d"
        Title="App Manager" Height="600" Width="600">
	<Window.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="UI/Nav1ListItemTemplate.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition MinHeight="32" Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>
		
		<!-- Top Row with Title and Browser Button -->
		<Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<!-- App Manager Title and Profile Selector -->
			<StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
				<Label Content="App Manager" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,10,0"/>
				<Label Content="Profile:" VerticalAlignment="Center" Margin="0,0,5,0"/>
				<ComboBox x:Name="ProfileSelector" 
				          Width="150" 
				          Height="24" 
				          VerticalAlignment="Center"
				          SelectionChanged="ProfileSelector_SelectionChanged"
				          ToolTip="Select active profile"/>
			</StackPanel>
			
			<!-- Browser and Data Folder Buttons in Center -->
			<StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
				
				<Button x:Name="DataFolderButton" 
				        Content="📁 Data" 
				        Width="100" 
				        Height="28" 
				        Margin="5" 
				        Click="DataFolderButton_Click"
				        Background="#FFC107"
				        Foreground="White"
				        FontWeight="Bold"
				        BorderThickness="0"
				        ToolTip="Open data folder with profiles and settings"/>
			</StackPanel>
			
			<!-- Console Panel on Right -->
			<StackPanel x:Name="ConsolePanel" Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0" />
		</Grid>
		
		<StackPanel Orientation="Vertical" Grid.Row="1" Grid.Column="0" Background="#D0D0D0" Height="auto">
			<!-- Nav 1 menu -->
			<StackPanel Orientation="Horizontal" Background="#F0F0F0">
				<Button x:Name="AppsButton" Content="Apps" Width="100" Height="30" Margin="5" Click="Nav1MenuButton_Click"/>
				<Button x:Name="AppGroupsButton" Content="Groups" Width="100" Height="30" Margin="5" Click="Nav1MenuButton_Click"/>
				<Button x:Name="ShortcutsButton" Content="Shortcuts" Width="100" Height="30" Margin="5" Click="Nav1MenuButton_Click"/>
			</StackPanel>
			<!-- Nav 1 List -->
			<ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="auto">
				<ListBox x:Name="Nav1List" ItemTemplate="{StaticResource Nav1ListItemTemplate}" Background="#F0F0F0" Width="auto" HorizontalAlignment="Left" />
			</ScrollViewer>
			<TextBox x:Name="Nav1NewItemTextBox" Margin="5" Width="100" HorizontalAlignment="Left" Foreground="Gray" />
		</StackPanel>

			<!-- Page Content -->
		<Frame x:Name="MainFrame" Grid.Row="1" Grid.Column="1" NavigationUIVisibility="Hidden" Margin="10"/>
	</Grid>
</Window>
