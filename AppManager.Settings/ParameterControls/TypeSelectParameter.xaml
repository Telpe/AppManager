<UserControl x:Class="AppManager.Settings.ParameterControls.TypeSelectParameter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:parametercontrols="clr-namespace:AppManager.Settings.ParameterControls" 
			 d:DataContext="{d:DesignInstance Type=parametercontrols:TypeSelectParameter}"
			 mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="400">

	<Grid Margin="5">
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="*"/>
		</Grid.ColumnDefinitions>

		<Label Content="{Binding LabelText}" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
		<ComboBox x:Name="TypeComboBox" Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" 
                    SelectionChanged="TypeComboBox_SelectionChanged"/>
	</Grid>
</UserControl>