<Window x:Class="AppManager.AppUI.ActionTriggerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AppManager.AppUI"
        Title="Edit Action/Trigger" 
        Height="600" Width="700"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        ShowInTaskbar="False">

	<Grid>
		<TabControl Margin="10">
			<TabItem Header="Action Editor">
				<local:ActionEditorControl x:Name="ActionEditor"/>
			</TabItem>
			<TabItem Header="Trigger Editor">
				<local:TriggerEditorControl x:Name="TriggerEditor"/>
			</TabItem>
		</TabControl>
	</Grid>
</Window>