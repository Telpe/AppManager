<Window x:Class="AppManager.Browser.BrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Browser - Quick Launch" 
        Height="500" 
        Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#F5F5F5">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Browser Shortcuts" 
                       FontSize="16" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"/>
            <Button Name="RefreshButton" 
                    Content="🔄 Refresh" 
                    Margin="20,0,0,0" 
                    Padding="10,5" 
                    Click="RefreshButton_Click"/>
            <Button Name="OpenFolderButton" 
                    Content="📁 Open Folder" 
                    Margin="10,0,0,0" 
                    Padding="10,5" 
                    Click="OpenFolderButton_Click"
                    Background="#FFC107"
                    Foreground="White"
                    FontWeight="Bold"
                    BorderThickness="0"/>
        </StackPanel>

        <!-- Shortcuts List -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <ItemsControl Name="ShortcutsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Width="120" 
                                Height="120" 
                                Margin="10" 
                                Background="White" 
                                BorderBrush="#CCCCCC" 
                                BorderThickness="1"
                                Click="ShortcutButton_Click"
                                Tag="{Binding}"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                ToolTip="{Binding ExecutablePath}">
                            <Button.Effect>
                                <DropShadowEffect Color="Gray" 
                                                  Direction="270" 
                                                  ShadowDepth="2" 
                                                  BlurRadius="5" 
                                                  Opacity="0.3"/>
                            </Button.Effect>
                            <StackPanel>
                                <!-- Icon - simplified since IconSource is now guaranteed to be non-null -->
                                <Image Width="48" 
                                       Height="48" 
                                       Margin="0,5,0,5"
                                       Source="{Binding IconSource}"
                                       Stretch="Uniform"/>
                                
                                <!-- Name -->
                                <TextBlock Text="{Binding Name}" 
                                           HorizontalAlignment="Center" 
                                           TextAlignment="Center"
                                           TextWrapping="Wrap" 
                                           MaxWidth="100"
                                           FontSize="11"
                                           Foreground="#333333"/>
                                
                                <!-- File Extension Badge -->
                                <TextBlock Text="{Binding FileExtension}" 
                                           HorizontalAlignment="Center"
                                           FontSize="9"
                                           Foreground="#666666"
                                           Margin="0,2,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#E0E0E0" Height="25">
            <StatusBarItem>
                <TextBlock Name="StatusTextBlock" Text="Ready"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock Name="ItemCountTextBlock" Text="0 items"/>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>