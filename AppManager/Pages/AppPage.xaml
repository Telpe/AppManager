<Page x:Class="AppManager.Pages.AppPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="600"
      Title="App">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="36" />
			<RowDefinition Height="*" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>


		<!-- App Details Panel -->
		<ScrollViewer x:Name="AppManagedEdit" Grid.Row="1" Grid.Column="0" VerticalScrollBarVisibility="Auto"></ScrollViewer>

		<!-- Buttons Panel -->
		<WrapPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left">
		</WrapPanel>

