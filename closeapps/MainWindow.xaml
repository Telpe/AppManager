<Window x:Class="closeapps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:closeapps"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="300">
    <Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition MaxWidth="280" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="auto" />
		</Grid.RowDefinitions>
		<ScrollViewer HorizontalAlignment="Left" Grid.Row="0" Width="260">
			<StackPanel x:Name="appslist" Height="auto"/>
		</ScrollViewer>
		<StackPanel Grid.Row="1" HorizontalAlignment="Left">
			<Button x:Name="AddAppButton">Add App</Button>
			<Button x:Name="CloseSelectedAppsButton"  Width="70" Height="22">Close Apps</Button>	
		</StackPanel>
		
		<StackPanel x:Name="ConsolePanel" HorizontalAlignment="Right" Grid.Row="0"/>
	</Grid>
</Window>
