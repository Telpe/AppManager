<Window x:Class="closeapps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:closeapps"
        mc:Ignorable="d"
        Title="MainWindow" Height="480" Width="300">
    <Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition MaxWidth="280" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="390" />
			<RowDefinition Height="40" />
		</Grid.RowDefinitions>
		<StackPanel x:Name="appslist" HorizontalAlignment="Left" Grid.Row="0"/>
		<Button x:Name="CloseSelectedApps" Grid.Row="1" HorizontalAlignment="Left" Width="70" Height="22">Close Apps</Button>
		<StackPanel x:Name="ConsolePanel" HorizontalAlignment="Right" Grid.Row="0"/>
	</Grid>
</Window>
